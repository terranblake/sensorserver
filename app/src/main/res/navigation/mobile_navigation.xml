<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_server">

    <fragment
        android:id="@+id/navigation_server"
        android:name="github.umer0586.sensorserver.fragments.ServerFragment"
        android:label="Server"
        tools:layout="@layout/fragment_server" />

    <fragment
        android:id="@+id/navigation_sensors"
        android:name="github.umer0586.sensorserver.fragments.AvailableSensorsFragment"
        android:label="Available Sensors"
        tools:layout="@layout/fragment_available_sensors" />

    <fragment
        android:id="@+id/navigation_connections"
        android:name="github.umer0586.sensorserver.fragments.ConnectionsFragment"
        android:label="Connections"
        tools:layout="@layout/fragment_connections" />

    <fragment
        android:id="@+id/navigation_network_scan"
        android:name="github.umer0586.sensorserver.fragments.NetworkScanFragment"
        android:label="@string/network_scan_title"
        tools:layout="@layout/fragment_network_scan" />

</navigation> 